    "version": "0.2.0",
    "configurations": [{
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name":"Python: debug",
            "type":"python",
            "request":"launch",
            "program":"${workspaceFolder}/src/app.py",
            "args": ["-v","local"],
            "console":"integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: debug tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [
                "-v",
                "./test"
            ]
        }
    ]
}